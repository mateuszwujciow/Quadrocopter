<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <uz.zgora.pl.raspberry.ui.configuration.detail.SectionView
                android:id="@+id/viewPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:headerTitle="Pitch" />

            <uz.zgora.pl.raspberry.ui.configuration.detail.SectionView
                android:id="@+id/viewRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:headerTitle="Roll" />

            <uz.zgora.pl.raspberry.ui.configuration.detail.SectionView
                android:id="@+id/viewYaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:headerTitle="Yaw" />

            <uz.zgora.pl.raspberry.ui.configuration.detail.SectionView
                android:id="@+id/viewThrust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:headerTitle="Thrust" />

        </LinearLayout>

    </ScrollView>